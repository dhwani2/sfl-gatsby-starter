<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6495ED"
        android:orientation="vertical">

        <TextView
            android:id="@+id/DeleteCustomerAccountTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="Delete Customer Account"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#061981"
            android:textColorHighlight="#009688"
            android:textSize="34sp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="60dp" />


        <EditText
            android:id="@+id/searchCustomerTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="Type customer account here" />


        <Button
            android:id="@+id/deleteCustomerAccountBtn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="10dp"
            android:text="Delete Customer Account" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>